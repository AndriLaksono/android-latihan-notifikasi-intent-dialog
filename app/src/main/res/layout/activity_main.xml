<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.andritom.contohtugas4.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="tampilNotifikasi"
        android:text="Tampilkan Notifikasi"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="Notifikasi dengan Intent"
        android:onClick="tampilNotifikasiWithIntent"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btndialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Tombol Exit pake Dialog"
        android:layout_below="@+id/button4"
        android:onClick="showDialog"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
